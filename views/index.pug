extends ./layout

block content
    .row
        .col-xs-12.col-md-6.col-md-offset-3
            form(method='POST', action='/news')
                .col-xs-8
                    label Сколько хотите почитать статей?
                    = ' '
                    select#news(class='form-control', name='news')
                        each val in [10, 5, 1]
                            option(selected= val==news)= val
                .col-xs-8
                    label Для каких сайтов отображать новости?
                    = ' '
                    select#sites(class='form-control', name='sites')
                        each val in ['все', 'macdigger.ru', 'css-tricks.com']
                            option(selected= val==sites)= val
                .col-xs-8
                    <br>
                    button.btn.btn-default(type='submit') Посмотреть